<div class="row">
    <div class="col-lg-12">

        <div class="page-header">
            <h1>Courses</h1>
        </div>


        <div class="panel panel-default">

            <div class="panel-heading">
                <h3 class="panel-title">Add Course</h3>
            </div>
            <div class="panel-body">
                <form action="/course/add" method="POST" class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="courseName" class="col-sm-2 control-label">Course Name:</label>
                        <div class="col-sm-10">
                            <input type="text" name="courseName" id="courseName" class="form-control" value=""
                                required="required" placeholder="Enter course name">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="courseDuration" class="col-sm-2 control-label">Course Duration:</label>
                        <div class="col-sm-10">
                            <input type="text" name="courseDuration" id="courseDuration" class="form-control" value=""
                                required="required" placeholder="Enter course duration in hrs">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="courseFee" class="col-sm-2 control-label">Course Fees:</label>
                        <div class="col-sm-10">
                            <input type="text" name="courseFee" id="courseFee" class="form-control" value=""
                                required="required" placeholder="Enter course fees in rs ex. 1000Rs">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-10 col-sm-offset-2">
                            <button type="submit" class="btn btn-primary">Add Course &raquo;</button>
                            <button type="reset" class="btn btn-link link-secondary">Clear</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>